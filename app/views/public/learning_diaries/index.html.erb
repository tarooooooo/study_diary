<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-lg-8">
      <h2>学びのりれき</h2>
      <% @learning_diaries.each_with_index do |learning_diary, number| %>
        <div class="card mb-3">
          <div class="card-header">
            <%= learning_diary.study_day %>
          </div>
          <div class="card-body">
            <blockquote class="blockquote mb-0">
              <p data-id=<%= number %> class="js-open"><%= learning_diary.body.truncate(30) %></p>
              <footer class="blockquote-footer">
                <% if learning_diary.study_category.present? %>
                  <%= learning_diary.study_category&.name %>
                <% else %>
                  カテゴリ未指定
                <% end %>
              </footer>
            </blockquote>
          </div>
        </div>
        <div class="modal-window" data-id="modal<%= number %>">
          <div class="image_box">
            <div class="js-close fs-4">
              ×
            </div>
            <p class="modal_text">
              <%= learning_diary.body %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="overlay"></div>
